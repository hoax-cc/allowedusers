--// Clean Whitelist System
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Replace these with the Roblox UserIds you want to allow
local AllowedUsers = {
    7961721800, -- your main account
    9221277304, -- friend’s account
    5310944395, -- friend’s account
    7331685803, -- friend’s account
    7232548960, -- friend’s account
    7961783918, -- friend’s account
    7961706385, -- friend’s account
    7961782029, -- friend’s account
    9171408192, -- friend’s account
    987654321, -- friend’s account
    987654321, -- friend’s account
    987654321, -- friend’s account
    987654321, -- friend’s account
}

local function isAllowed(id)
    for _, allowedId in ipairs(AllowedUsers) do
        if id == allowedId then
            return true
        end
    end
    return false
end

if not isAllowed(LocalPlayer.UserId) then
    LocalPlayer:Kick("You are not authorized to use this script.")
    return
end
